---
import { site } from "../data/siteContent";
---

<div class="w-full bg-surface border-b border-border">
  <div class="container-main flex items-center justify-between h-11">
    <a
      href={`tel:${site.phone.replace(/\D/g, "")}`}
      class="text-muted text-sm font-medium hover:text-accent transition-colors duration-200"
    >
      {site.phone}
    </a>
    <a
      href="/quote"
      class="text-xs font-heading font-semibold uppercase tracking-[0.06em] px-4 py-1.5 bg-accent/10 text-accent rounded hover:bg-accent hover:text-bg transition-all duration-200"
    >
      Map Your Property &amp; Get Quote
    </a>
  </div>
</div>
