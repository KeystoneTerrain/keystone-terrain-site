---
interface Props {
  id?: string;
  bg?: string;
  class?: string;
  narrow?: boolean;
  noise?: boolean;
  padding?: string;
}

const {
  id,
  bg = "",
  class: className = "",
  narrow = false,
  noise = false,
  padding = "py-20 lg:py-28",
} = Astro.props;
---

<section
  id={id}
  class:list={[
    "relative w-full",
    bg,
    padding,
    noise && "noise-overlay",
    className,
  ]}
>
  <div class:list={["container-main", narrow && "max-w-[900px]"]}>
    <slot />
  </div>
</section>
