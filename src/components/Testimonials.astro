---
import Section from "./Section.astro";
import { testimonials } from "../data/siteContent";
---

<Section bg="bg-surface" narrow noise>
  <div class="text-center mb-12">
    <p class="text-olive2 text-xs font-heading font-semibold uppercase tracking-[0.18em] mb-3">
      Verified Client Outcomes
    </p>
    <h2 class="text-3xl sm:text-4xl font-heading font-bold text-text">
      REAL PROJECTS. REAL RESULTS.
    </h2>
  </div>

  <div class="space-y-8">
    {testimonials.map((t) => (
      <div class="bg-surface2 border border-border rounded-lg p-6 lg:p-8">
        <!-- Outcome stats row -->
        {(t.acreage || t.timeframe) && (
          <div class="flex flex-wrap gap-4 mb-4">
            {t.acreage && (
              <span class="inline-flex items-center gap-1.5 text-xs font-heading font-semibold uppercase tracking-wide text-olive2">
                <span class="w-1.5 h-1.5 rounded-full bg-olive2"></span>
                {t.acreage}
              </span>
            )}
            {t.timeframe && (
              <span class="inline-flex items-center gap-1.5 text-xs font-heading font-semibold uppercase tracking-wide text-accent">
                <span class="w-1.5 h-1.5 rounded-full bg-accent"></span>
                {t.timeframe}
              </span>
            )}
          </div>
        )}

        <!-- Before / After row -->
        {(t.before || t.after) && (
          <div class="flex flex-col sm:flex-row gap-3 sm:gap-6 mb-4 text-sm">
            {t.before && (
              <div class="flex items-start gap-2">
                <span class="shrink-0 mt-0.5 text-red-400/70 text-xs font-bold">BEFORE:</span>
                <span class="text-muted">{t.before}</span>
              </div>
            )}
            {t.after && (
              <div class="flex items-start gap-2">
                <span class="shrink-0 mt-0.5 text-olive2 text-xs font-bold">AFTER:</span>
                <span class="text-muted">{t.after}</span>
              </div>
            )}
          </div>
        )}

        <!-- Stars -->
        <div class="flex gap-1 mb-4">
          {Array.from({ length: 5 }).map(() => (
            <svg class="w-4 h-4 text-accent" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
            </svg>
          ))}
        </div>

        <!-- Quote -->
        <blockquote class="text-text text-base lg:text-[17px] leading-relaxed">
          &ldquo;{t.quote}&rdquo;
        </blockquote>

        <!-- Name -->
        <p class="mt-4 text-muted text-sm font-medium">
          &mdash; {t.name}
        </p>
      </div>
    ))}
  </div>
</Section>
